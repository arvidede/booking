{
    "extends": "./.svelte-kit/tsconfig.json",
    "include": ["./src/types", "./src/**/*.js", "./src/**/*.ts", "./src/**/*.svelte"],
    "compilerOptions": {
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2020", "DOM"],
        "moduleResolution": "node",
        "module": "es2020",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "target": "es2020",
        "paths": {
            "utils/*": ["./src/utils/*"],
            "components/*": ["./src/components/*"],
            "server/*": ["src/server/*"],
            "types": ["./src/types"],
            "assets/*": ["./src/assets/*"],
            "types/*": ["./src/types/*"],
            "styles/*": ["./src/styles/*"],
            "stores/*": ["./src/stores/*"]
        }
    }
}
